# Multi-stage build for test environment
# Stage 1: Build Frontend
FROM node:20-alpine AS frontend-builder

WORKDIR /app/frontend

# Copy frontend package files
COPY ayunis-core-frontend/package*.json ./
RUN npm ci

# Copy frontend source
COPY ayunis-core-frontend/ ./

# Build frontend
RUN npm run build

# Stage 2: Test Environment (single stage with everything)
FROM node:20-alpine

# Install runtime and build dependencies
RUN apk add --no-cache python3 make g++ gcc curl

WORKDIR /app

# Copy backend package files and install ALL dependencies (including dev)
COPY ayunis-core-backend/package*.json ./
RUN npm ci && npm rebuild bcrypt --build-from-source

# Copy backend source code and config files
COPY ayunis-core-backend/src ./src
COPY ayunis-core-backend/test ./test
COPY ayunis-core-backend/tsconfig*.json ./
COPY ayunis-core-backend/jest.setup.js ./
COPY ayunis-core-backend/eslint.config.mjs ./
COPY ayunis-core-backend/nest-cli.json ./

# Build backend
RUN npm run build

# Verify build output
RUN ls -la dist/ && ls -la dist/src/ && test -f dist/src/main.js

# Copy frontend files from builder stage into dist/frontend
COPY --from=frontend-builder /app/frontend/dist ./dist/frontend

# Create uploads directory
RUN mkdir -p uploads

# Set environment variables
ENV NODE_ENV=test
ENV PORT=3000

# Expose the port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })" || exit 1

# Start the application
CMD ["node", "dist/src/main.js"] 