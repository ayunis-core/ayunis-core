{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "new-york",
  "rsc": false,
  "tsx": true,
  "registries": {
    "@ayunis": {
      "url": "https://registry.ayunis.de/r/{name}.json",
      "headers": {
        "Authorization": "Bearer ${AYUNIS_REGISTRY_TOKEN}"
      }
    }
  },
  "tailwind": {
    "config": "",
    "css": "src/styles/main.css",
    "baseColor": "zinc",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "@/shared/ui/shadcn",
    "utils": "@/shared/lib/shadcn",
    "ui": "@/shared/ui/shadcn",
    "lib": "@/shared/lib/shadcn",
    "hooks": "@/shared/hooks/shadcn"
  },
  "iconLibrary": "lucide"
}
