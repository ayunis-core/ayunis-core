{
  "name": "core-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register -r dotenv/config ./node_modules/typeorm/cli.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "db:dev": "docker-compose -f docker-compose.dev.yml exec api npx typeorm-ts-node-commonjs",
    "db:prod": "docker-compose exec api npx typeorm-ts-node-commonjs",
    "migration:generate:dev": "npm run db:dev -- migration:generate -d src/db/datasource.ts",
    "migration:run:dev": "npm run db:dev -- migration:run -d src/db/datasource.ts",
    "migration:revert:dev": "npm run db:dev -- migration:revert -d src/db/datasource.ts",
    "migration:show:dev": "npm run db:dev -- migration:show -d src/db/datasource.ts",
    "migration:generate:prod": "npm run db:prod -- migration:generate -d src/db/datasource.ts",
    "migration:run:prod": "npm run db:prod -- migration:run -d src/db/datasource.ts",
    "migration:revert:prod": "npm run db:prod -- migration:revert -d src/db/datasource.ts",
    "migration:show:prod": "npm run db:prod -- migration:show -d src/db/datasource.ts",
    "migration:sync:dev": "npm run db:dev -- schema:sync -d src/db/datasource.ts",
    "migration:drop:dev": "npm run db:dev -- schema:drop -d src/db/datasource.ts",
    "bundle-frontend": "bash scripts/bundle-frontend.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@mistralai/mistralai": "^1.6.0",
    "@nestjs-cls/transactional": "^3.1.0",
    "@nestjs-cls/transactional-adapter-typeorm": "^1.3.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.1.5",
    "@nestjs/typeorm": "^11.0.0",
    "ajv": "^8.17.1",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.1.0",
    "json-schema-to-ts": "^3.1.1",
    "langfuse": "^3.37.4",
    "minio": "^8.0.5",
    "mjml": "^4.7.1",
    "nest-winston": "^1.10.2",
    "nestjs-cls": "^6.0.1",
    "nodemailer": "^7.0.5",
    "ollama": "^0.5.16",
    "openai": "^4.104.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/minio": "^7.1.0",
    "@types/mjml": "^4.7.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.3",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swagger-parser": "^10.0.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
